<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/car_background">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:gravity="center_vertical"
        android:background="@color/car_primary">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放列表名称"
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:singleLine="true"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/play_all_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="播放全部"
            app:tint="@android:color/white"
            android:layout_marginEnd="@dimen/spacing_small" />

        <ImageButton
            android:id="@+id/shuffle_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:src="@drawable/ic_shuffle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="随机播放"
            app:tint="@android:color/white"
            android:layout_marginEnd="@dimen/spacing_small" />

        <ImageButton
            android:id="@+id/add_songs_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="添加歌曲"
            app:tint="@android:color/white" />
            
        <ImageButton
            android:id="@+id/now_playing_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:src="@android:drawable/ic_media_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="正在播放"
            app:tint="@color/car_accent"
            android:visibility="gone"
            android:layout_marginStart="@dimen/spacing_small" />

    </LinearLayout>

    <!-- 歌曲列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/song_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- 空状态 -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@android:drawable/ic_menu_upload"
            android:alpha="0.3"
            android:contentDescription="Empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有歌曲"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_marginTop="@dimen/spacing_medium"
            android:textColor="@color/car_text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击下方按钮添加歌曲"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/spacing_small"
            android:textColor="@color/car_text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_songs_empty_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="添加歌曲"
            android:layout_marginTop="@dimen/spacing_large"
            style="@style/Button.Primary" />

    </LinearLayout>

</LinearLayout>