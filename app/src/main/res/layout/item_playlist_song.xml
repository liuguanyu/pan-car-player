<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:background="@drawable/song_item_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/car_text_primary"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/song_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/car_text_secondary"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/song_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play from here"
        android:layout_marginStart="8dp" />

</LinearLayout>