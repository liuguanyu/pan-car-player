<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 车载应用主题 - 深色模式 -->
    <style name="Theme.CarPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/car_primary</item>
        <item name="colorPrimaryDark">@color/car_primary_dark</item>
        <item name="colorAccent">@color/car_accent</item>
        <item name="android:colorBackground">@color/car_background</item>
        <item name="android:windowBackground">@color/car_background</item>
        <item name="android:textColorPrimary">@color/car_text_primary</item>
        <item name="android:textColorSecondary">@color/car_text_secondary</item>
        <item name="android:statusBarColor">@color/car_surface</item>
        <item name="android:navigationBarColor">@color/car_surface</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="alertDialogTheme">@style/Theme.CarPlayer.Dialog</item>
    </style>

    <!-- Dialog 主题 -->
    <style name="Theme.CarPlayer.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:textColorPrimary">@color/car_text_primary</item>
        <item name="android:background">@color/car_surface</item>
        <item name="colorSurface">@color/car_surface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/car_accent</item>
    </style>
    
    <!-- 无标题栏主题 -->
    <style name="Theme.CarPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Baidu Car Player 主题 -->
    <style name="Theme.BaiduCarPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/car_primary</item>
        <item name="colorPrimaryDark">@color/car_primary_dark</item>
        <item name="colorAccent">@color/car_accent</item>
        <item name="android:colorBackground">@color/car_background</item>
        <item name="android:windowBackground">@color/car_background</item>
        <item name="android:textColorPrimary">@color/car_text_primary</item>
        <item name="android:textColorSecondary">@color/car_text_secondary</item>
    </style>
    
    <style name="Theme.BaiduCarPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- 登录页面主题 -->
    <style name="Theme.Login" parent="Theme.CarPlayer">
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>
    
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>
    
    <!-- 图标按钮样式 -->
    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconTint">@color/car_text_primary</item>
        <item name="iconSize">@dimen/icon_button_size</item>
    </style>
    
    <!-- 文本样式 -->
    <style name="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>
    
    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>
    
    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>
    
    <style name="Text.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>
    
    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>
    
    <style name="Text.Secondary">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/car_text_secondary</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Card.Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/car_surface</item>
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">0dp</item>
    </style>
    
    <!-- 进度条样式 -->
    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/playback_progress</item>
        <item name="android:progressBackgroundTint">@color/playback_progress_background</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
    </style>
</resources>