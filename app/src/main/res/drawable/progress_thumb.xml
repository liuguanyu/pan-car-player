<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层光晕 -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <gradient
                android:startColor="#4400E5FF"
                android:endColor="#00000000"
                android:type="radial"
                android:gradientRadius="12dp" />
        </shape>
    </item>
    
    <!-- 中层渐变圆 -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp" />
            <gradient
                android:startColor="#00E5FF"
                android:centerColor="#2979FF"
                android:endColor="#651FFF"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- 内层高光 -->
    <item
        android:top="6dp"
        android:bottom="10dp"
        android:left="6dp"
        android:right="10dp">
        <shape android:shape="oval">
            <size
                android:width="8dp"
                android:height="4dp" />
            <solid android:color="#66FFFFFF" />
        </shape>
    </item>
</layer-list>